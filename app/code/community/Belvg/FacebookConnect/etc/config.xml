<config>
    <modules>
        <Belvg_FacebookConnect>
            <version>2.0.1</version>
        </Belvg_FacebookConnect>
    </modules>
    <frontend>
        <routers>
            <facebookconnect>
                <use>standard</use>
                <args>
                    <module>Belvg_FacebookConnect</module>
                    <frontName>facebookconnect</frontName>
                </args>
            </facebookconnect>
        </routers>
        <layout>
            <updates>
                <facebookconnect>
                    <file>facebookconnect.xml</file>
                </facebookconnect>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <facebookconnect>
                <class>Belvg_FacebookConnect_Model</class>
                <resourceModel>facebookconnect_mysql4</resourceModel>
            </facebookconnect>
            <facebookconnect_mysql4>
                <class>Belvg_FacebookConnect_Model</class>
                <entities>
                    <facebookconnect>
                        <table>belvg_facebook_customer</table>
                    </facebookconnect>
                </entities>
            </facebookconnect_mysql4>
        </models>
        <resources>
            <facebookconnect_setup>
                <setup>
                    <module>Belvg_FacebookConnect</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </facebookconnect_setup>
            <facebookconnect_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </facebookconnect_write>
            <facebookconnect_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </facebookconnect_read>
        </resources>
        <blocks>
            <facebookconnect>
                <class>Belvg_FacebookConnect_Block</class>
            </facebookconnect>
        </blocks>
        <helpers>
            <facebookconnect>
                <class>Belvg_FacebookConnect_Helper</class>
            </facebookconnect>
        </helpers>
        <rewrite>
            <Belvg_FacebookConnect_Wishlist_Index>
                <from><![CDATA[#^/wishlist/index/#]]>
                </from>
                <to>/facebookconnect/wishlist_index/</to>
            </Belvg_FacebookConnect_Wishlist_Index>
        </rewrite>
    </global>
    <default>
        <facebookconnect>
            <wishlist>
                <note>I have added {product} to my wishlist.</note>
            </wishlist>
        </facebookconnect>
    </default>
</config> 